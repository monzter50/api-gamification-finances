{
  "name": "api-gamification-finances",
  "version": "1.0.0",
  "description": "API para aplicación de gamificación de finanzas",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx --env-file=.env src/server.ts",
    "dev:watch": "tsx --env-file=.env --watch src/server.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "seed": "tsx src/scripts/seedAchievements.ts",
    "test:db": "tsx --env-file=.env src/scripts/testConnection.ts",
    "docs": "echo 'OpenAPI docs: http://localhost:3000/api-docs'",
    "export:schema": "tsx src/scripts/exportOpenApi.ts",
    "generate:client": "yarn run tsx src/scripts/exportOpenApi.ts && yarn run openapi-typescript openapi-schema.json -o src/types/openapi.d.ts"
  },
  "keywords": [
    "gamification",
    "finances",
    "api",
    "express",
    "node"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@aglaya/logger": "^0.1.0",
    "@types/mongoose": "^5.11.97",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^24.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "openapi-typescript": "^7.10.1",
    "supertest": "^6.3.3",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
